<component name="dimension" type="synapse/template" displayName="Row and Column Operations">
    <subComponents>
        <component name="insertDimension">
            <displayName>Insert Dimension</displayName>
            <file>insertDimension.xml</file>
            <description>Insert an empty row or column.</description>
        </component>
        <component name="deleteDimension">
            <displayName>Delete Dimension</displayName>
            <file>deleteDimension.xml</file>
            <description>Remove rows, columns or parts of them.</description>
        </component>
        <component name="appendDimension">
            <displayName>Append Dimension</displayName>
            <file>appendDimension.xml</file>
            <description>Append empty rows or columns at the end of the sheet.</description>
        </component>
        <component name="resizeDimension">
            <displayName>Resize Dimension</displayName>
            <file>resizeDimension.xml</file>
            <description>Automatically resize dimensions based on content.</description>
        </component>
        <component name="moveDimension">
            <displayName>Move Dimension</displayName>
            <file>moveDimension.xml</file>
            <description>Move rows or columns to a new position.</description>
        </component>
        <component name="updateDimensionProperties">
            <displayName>Update Dimension Properties</displayName>
            <file>updateDimensionProperties.xml</file>
            <description>Update properties like width/height of rows/columns.</description>
        </component>
    </subComponents>
</component>
