{
  "connectorName": "googlespreadsheet",
  "operationName": "createNewSheet",
  "title": "Create a new spreadsheet",
  "help": "<h1>Create Spreadsheet</h1><b>Creates a new spreadsheet with customizable properties and sheets.</b><br><br>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "GOOGLESPREADSHEET"
              ],
              "defaultType": "connection.GOOGLESPREADSHEET",
              "required": "true",
              "helpTip": "Connection to be used"
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Spreadsheet Properties",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configLevel",
              "displayName": "Configuration Level",
              "inputType": "comboOrExpression",
              "comboValues": [
                "BASIC",
                "ADVANCED"
              ],
              "defaultValue": "BASIC",
              "required": "false",
              "helpTip": "Select the configuration level for the operation. BASIC will show only the basic attributes, while ADVANCED will show all attributes."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "title",
              "displayName": "Spreadsheet Title",
              "inputType": "stringOrExpression",
              "required": "false",
              "enableCondition": [
                {
                  "configLevel": "BASIC"
                }
              ],
              "helpTip": "Title of the spreadsheet to be created."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "initialSheetName",
              "displayName": "Initial Sheet Name (Tab Level)",
              "inputType": "stringOrExpression",
              "required": "false",
              "defaultValue": "Sheet1",
              "enableCondition": [
                {
                  "configLevel": "BASIC"
                }
              ],
              "helpTip": "Name of the initial sheet to be created in the spreadsheet."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "properties",
              "displayName": "Spreadsheet Properties",
              "inputType": "stringOrExpression",
              "required": "false",
              "enableCondition": [
                {
                  "configLevel": "ADVANCED"
                }
              ],
              "helpTip": "Properties of the spreadsheet like title. Format: {\"title\": \"My Spreadsheet\"}"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "sheets",
              "displayName": "Sheets",
              "inputType": "stringOrExpression",
              "enableCondition": [
                {
                  "configLevel": "ADVANCED"
                }
              ],
              "required": "false",
              "helpTip": "List of sheets to create in the spreadsheet. Format: [{\"properties\": {\"title\": \"Sheet1\"}}]"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "namedRanges",
              "displayName": "Named Ranges",
              "inputType": "stringOrExpression",
              "required": "false",
              "enableCondition": [
                {
                  "configLevel": "ADVANCED"
                }
              ],
              "helpTip": "Named ranges to create in the spreadsheet"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "fields",
              "displayName": "Fields",
              "inputType": "stringOrExpression",
              "required": "false",
              "enableCondition": [
                {
                  "configLevel": "ADVANCED"
                }
              ],
              "helpTip": "Specifying which fields to include in a partial response"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "spreadsheetId",
              "displayName": "Spreadsheet ID",
              "inputType": "stringOrExpression",
              "required": "false",
              "enableCondition": [
                {
                  "configLevel": "ADVANCED"
                }
              ],
              "helpTip": "ID of the spreadsheet to be created. If not provided, a new spreadsheet will be created."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Output",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "responseVariable",
              "displayName": "Output Variable Name",
              "inputType": "string",
              "deriveResponseVariable": "true",
              "required": "true",
              "helpTip": "Name of the variable to which the output of the operation should be assigned"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "overwriteBody",
              "displayName": "Overwrite Message Body",
              "inputType": "checkbox",
              "defaultValue": "false",
              "helpTip": "Replace the Message Body in Message Context with the output of the operation (This will remove the payload from the above variable).",
              "required": "false"
            }
          }
        ]
      }
    }
  ]
}